@namespace=Shaml.Web.HtmlExtensions
@type=List<string>
%div
  %h2 List of OpenID identities for this account:
  %ul
    - foreach (string id in ViewData.Model)
      %li
        = id
        - using(Html.BeginForm( "RemoveOpenIdAccount", "OpenId", new { openid_identifier = id } ))
          = Html.Hidden("openIdIdentifier", id)
          = Html.SubmitButton( "submit", "Delete" )
  = Html.ActionLink("Assign new ID","Login")
  = Html.ActionLink("Logout","Logout")
